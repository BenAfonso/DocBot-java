<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="ui.LoginController">
    <children>
        <Pane prefHeight="700.0" prefWidth="1000.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Button fx:id="btnLogin" layoutX="474.0" layoutY="356.0" mnemonicParsing="false" onAction="#login"
                        text="Login"/>
                <TextField fx:id="usernameField" layoutX="421.0" layoutY="240.0"/>
                <Label alignment="CENTER" layoutX="442.0" layoutY="115.0" text="Login Page" textAlignment="CENTER"
                       textFill="#78909c">
                    <font>
                        <Font size="24.0"/>
                    </font>
                </Label>
                <Label layoutX="421.0" layoutY="215.0" text="Email adress"/>
                <Label layoutX="421.0" layoutY="283.0" text="Password"/>
                <Label fx:id="invalidCredential" layoutX="81.0" layoutY="223.0"/>
                <Button fx:id="btnRegisterDoctor" layoutX="434.0" layoutY="431.0" mnemonicParsing="false"
                        onAction="#goRegisterDoctor" text="Register as a doctor"/>

                <Button fx:id="btnRegisterPatient" layoutX="433.0" layoutY="474.0" mnemonicParsing="false"
                        onAction="#goRegisterPatient" text="Register as a patient"/>
                <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#78909c" height="80.0" stroke="BLACK"
                           strokeType="INSIDE" strokeWidth="0.0" width="1000.0"/>
                <ImageView fitHeight="70.0" fitWidth="70.0" layoutX="487.0" layoutY="5.0" pickOnBounds="true"
                           preserveRatio="true">
                    <image>
                        <Image url="@../img/logoDocbot.png"/>
                    </image>
                </ImageView>
                <Text layoutX="442.0" layoutY="46.0" strokeType="OUTSIDE" strokeWidth="0.0" text="DOC">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Text>
                <Text layoutX="541.0" layoutY="46.0" strokeType="OUTSIDE" strokeWidth="0.0" text="BOT">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Text>
                <PasswordField fx:id="passwordField" layoutX="421.0" layoutY="300.0"/>
            </children>
        </Pane>
    </children>
</AnchorPane>
